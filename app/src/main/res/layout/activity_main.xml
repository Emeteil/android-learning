<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundApp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:id="@+id/displayContainer"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/display_background"
                android:gravity="end|center_vertical"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginHorizontal="4dp">

            <TextView
                android:id="@+id/inputField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>


            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnCount="4"
                android:rowCount="7">

            <!-- 1 row -->
            <Button
                android:id="@+id/buttonSin"
                style="@style/CalcButton.Function"
                android:text="sin"
                android:theme="@style/Button.func_button" />

            <Button
                android:id="@+id/buttonCos"
                style="@style/CalcButton.Function"
                android:text="cos"
                android:theme="@style/Button.func_button" />

            <Button
                android:id="@+id/buttonLog"
                style="@style/CalcButton.Function"
                android:text="log"
                android:theme="@style/Button.func_button" />

            <Button
                android:id="@+id/buttonPi"
                style="@style/CalcButton.Function"
                android:text="pi"
                android:theme="@style/Button.func_button" />

            <!-- 2 row -->
            <Button
                android:id="@+id/buttonClear"
                style="@style/CalcButton.ClearButton"
                android:text="C"
                android:theme="@style/Button.clear_button" />

            <Button
                android:id="@+id/buttonBracketOpen"
                style="@style/CalcButton.BracketButton"
                android:text="("
                android:theme="@style/Button.bracket_button" />

            <Button
                android:id="@+id/buttonBracketClose"
                style="@style/CalcButton.BracketButton"
                android:text=")"
                android:theme="@style/Button.bracket_button" />

            <Button
                android:id="@+id/buttonDivide"
                style="@style/CalcButton.Operator"
                android:text="รท"
                android:theme="@style/Button.operation_button" />

            <!-- 3 row -->
            <Button
                android:id="@+id/button7"
                style="@style/CalcButton.Number"
                android:text="7"
                android:theme="@style/Button.digit_button" />

            <Button
                android:id="@+id/button8"
                style="@style/CalcButton.Number"
                android:text="8"
                android:theme="@style/Button.digit_button" />

            <Button
                android:id="@+id/button9"
                style="@style/CalcButton.Number"
                android:text="9"
                android:theme="@style/Button.digit_button" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@style/CalcButton.Operator"
                android:text="ร"
                android:theme="@style/Button.operation_button" />

            <!-- 4 row -->
            <Button
                android:id="@+id/button4"
                style="@style/CalcButton.Number"
                android:text="4"
                android:theme="@style/Button.digit_button" />

            <Button
                android:id="@+id/button5"
                style="@style/CalcButton.Number"
                android:text="5"
                android:theme="@style/Button.digit_button" />

            <Button
                android:id="@+id/button6"
                style="@style/CalcButton.Number"
                android:text="6"
                android:theme="@style/Button.digit_button" />

            <Button
                android:id="@+id/buttonSubtract"
                style="@style/CalcButton.Operator"
                android:text="-"
                android:theme="@style/Button.operation_button" />

            <!-- 5 row -->
            <Button
                android:id="@+id/button1"
                style="@style/CalcButton.Number"
                android:text="1"
                android:theme="@style/Button.digit_button" />

            <Button
                android:id="@+id/button2"
                style="@style/CalcButton.Number"
                android:text="2"
                android:theme="@style/Button.digit_button" />

            <Button
                android:id="@+id/button3"
                style="@style/CalcButton.Number"
                android:text="3"
                android:theme="@style/Button.digit_button" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/CalcButton.Operator"
                android:text="+"
                android:theme="@style/Button.operation_button" />

            <!-- 6 row -->
            <Button
                android:id="@+id/buttonPower"
                style="@style/CalcButton.Operator"
                android:text="^"
                android:theme="@style/Button.operation_button" />

            <Button
                android:id="@+id/button0"
                style="@style/CalcButton.Number"
                android:text="0"
                android:theme="@style/Button.digit_button" />

            <Button
                android:id="@+id/buttonDecimal"
                style="@style/CalcButton.Number"
                android:text="."
                android:theme="@style/Button.digit_button" />

            <Button
                android:id="@+id/buttonEquals"
                style="@style/CalcButton.Equals"
                android:text="="
                android:theme="@style/Button.equals_button" />

        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>