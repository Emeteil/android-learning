<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activites.DataSenderActivity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите данные для входа"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editTextServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IP:Port сервера"
            android:textColor="@color/white"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/editTextNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Никнейм"
            android:textColor="@color/white"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Пароль"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CalcButton.Function"
            android:text="Войти/Зарегистрироваться"
            android:padding="8dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/buttonSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CalcButton.Function"
            android:text="Включить передачу данных"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:enabled="false" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CalcButton.Function"
            android:text="Назад"
            android:padding="8dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>